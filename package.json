{
  "name": "recommend-backend",
  "version": "1.0.0",
  "description": "WhatsApp-first local discovery platform",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm migration:generate -- -n",
    "migration:run": "yarn typeorm migration:run -- -d ./dist/data-source.js",
    "migration:revert": "yarn typeorm migration:revert -- -d ./dist/data-source.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@langchain/openai": "^0.1.0",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@sendgrid/mail": "^8.0.0",
    "@types/passport-jwt": "^4.0.1",
    "argon2": "^0.31.0",
    "bull": "^4.16.5",
    "cache-manager": "^5.2.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "i": "^0.3.7",
    "ioredis": "^5.0.0",
    "nodemailer": "^6.9.0",
    "openai": "^4.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.0.0",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.0",
    "rxjs": "^7.0.0",
    "typeorm": "^0.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport-google-oauth20": "^2.0.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  }
}
